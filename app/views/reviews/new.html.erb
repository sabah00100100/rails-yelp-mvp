<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.select :rating, [0, 1, 2, 3, 4, 5] %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
<%= link_to "back" restaurant_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "index" restaurants_path, class: "btn btn-primary" %>
